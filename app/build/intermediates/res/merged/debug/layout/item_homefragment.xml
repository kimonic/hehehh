<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@drawable/investment_fragment_item_bg"
        android:gravity="center_vertical"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingTop="8dp"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/homepage_fragment_item_tv_money"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical|bottom"
                    android:singleLine="true"
                    android:text="100万"
                    android:textColor="@color/black1"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical|top"
                    android:singleLine="true"
                    android:text="借款数目"
                    android:textColor="#767676"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingTop="8dp"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/homepage_fragment_item_tv_interestRate"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical|bottom"
                    android:singleLine="true"
                    android:text="12%"
                    android:textColor="@color/black1"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical|top"
                    android:singleLine="true"
                    android:text="年利率"
                    android:textColor="#767676"
                    android:textSize="12sp" />
            </LinearLayout>

            <com.diyou.view.RoundProgressBar
                android:id="@+id/homepage_fragment_item_pb_progress"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:layout_marginRight="5dp" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="@color/gray" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/homepage_fragment_item_loan_kind"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:contentDescription="@string/mnull"
                 />

            <ImageView
                android:id="@+id/homepage_fragment_item_credit_rank"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:contentDescription="@string/mnull" />

            <TextView
                android:id="@+id/homepage_fragment_item_tv_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:text="Medium Text"
                android:textColor="@color/black1"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/homepage_fragment_item_tv_time"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_weight="1"
                android:gravity="center"
                android:singleLine="true"
                android:text="Medium Text"
                android:textColor="@color/black1"
                android:textSize="12sp" />

            <!-- <TextView -->
            <!-- android:id="@+id/homepage_fragment_item_tv_end_time" -->
            <!-- android:layout_width="0dp" -->
            <!-- android:layout_height="wrap_content" -->
            <!-- android:layout_marginRight="8dp" -->
            <!-- android:layout_weight="1" -->
            <!-- android:gravity="center_vertical" -->
            <!-- android:text="Medium Text" -->
            <!-- android:textSize="12sp" /> -->
        </LinearLayout>
    </LinearLayout>


<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@color/dark_bule" >

    <TextView
        android:id="@+id/title_name"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:ellipsize="end"
        android:gravity="center"
        android:singleLine="true"
        tools:text="@string/common_display_title_default"
        android:textColor="@color/white"
        android:textSize="18sp" />

    <ImageView
        android:id="@+id/title_more"
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:src="@drawable/insestment_share"
        android:textSize="18sp"
        android:visibility="invisible" />

    <LinearLayout
        android:id="@+id/title_back"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:background="@color/dark_bule" >

        <ImageView
            android:id="@+id/iv_common_back"
            style="@style/ButtonBack"
            android:layout_width="50dp"
            android:layout_height="50dp" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl_title_bar_right"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@drawable/home_button_bg"
        android:layout_alignParentRight="true"
        android:visibility="gone" >

        <TextView
            android:id="@+id/tv_title_bar_right"
            android:padding="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/personal_center_trading_record"
            android:textSize="16sp"
            android:textColor="@color/white" />
    </RelativeLayout>

</RelativeLayout><!-- From: file:/E:/work/demo/Android_SanHeCaiFu/JAVA_HF_SanHeCaiFu_V5/app/src/main/res/layout/layout_common_title_bar.xml -->
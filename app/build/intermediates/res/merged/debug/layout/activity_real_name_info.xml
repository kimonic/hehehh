<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".RealNameAuthActivity"
    android:background="@color/layout_bg" >

    <include
        android:id="@+id/activity_update_phone_number_title_layout"
        layout="@layout/layout_common_title_bar" />
    <com.diyou.view.LoadingLayout
        android:id="@+id/account_detail_loadlayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
    </com.diyou.view.LoadingLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/investment_fragment_item_bg"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:padding="8dp" >

        <TextView
            android:id="@+id/tv_realname_info_name"
            style="@style/common_black_mid_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/real_name_id_name" />

        <TextView
            android:id="@+id/tv_real_name_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="@string/real_name_pass_auth"
            android:textColor="@color/lanse" />

    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/investment_fragment_item_bg"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal"
        android:padding="1dp" >

        <TextView
            android:id="@+id/tv_realname_info_cardid"
            style="@style/common_black_mid_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_gravity="center_vertical"
            android:text="@string/real_name_id_num" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@drawable/investment_fragment_item_bg" >

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" >

            <ImageView
                android:id="@+id/iv_real_name_photo_zheng"
                android:layout_width="100dp"
                android:layout_height="70dp"
                android:layout_centerInParent="true"
                android:src="@drawable/take_photo"
                android:layout_marginTop="8dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_centerHorizontal="true"
                android:layout_above="@+id/iv_real_name_photo_zheng" >

                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/realname_id_card_zheng" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/real_name_photo_zheng"
                    android:textColor="@color/huise"
                    android:textSize="15sp" />

            </LinearLayout>

        </RelativeLayout>

        <TextView
            android:id="@+id/textView3"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:background="@color/gray" />

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" >
            <ImageView
                android:id="@+id/iv_real_name_photo_fang"
                android:layout_width="100dp"
                android:layout_height="70dp"
                android:layout_centerInParent="true"
                android:src="@drawable/take_photo"
                android:layout_marginTop="8dp"  />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_centerHorizontal="true"
                android:layout_above="@+id/iv_real_name_photo_fang" >

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/realname_id_card_fang" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/real_name_photo_fan"
                    android:textColor="@color/huise"
                    android:textSize="15sp" />

            </LinearLayout>
        </RelativeLayout>

    </LinearLayout>
</LinearLayout>

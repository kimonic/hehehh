<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".AreaListActivity" >

    <include layout="@layout/layout_common_title_bar" />
<com.diyou.view.LoadingLayout
        android:id="@+id/fund_detail_loadlayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
    </com.diyou.view.LoadingLayout>
    
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@color/layout_bg"
    android:gravity="center_vertical"
    android:padding="8dp" >

    <TextView
        android:id="@+id/textView1"
        style="@style/common_gray_small_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="请选择开户行所在城市" />
    
    </LinearLayout>
    <com.diyou.view.PinnedHeaderExpandableListView
        android:id="@+id/lv_area"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:cacheColorHint="#00000000"
        android:choiceMode="singleChoice"
        android:drawSelectorOnTop="false"
        android:fastScrollEnabled="false"
        android:footerDividersEnabled="true"
        android:groupIndicator="@null"
        android:overScrollMode="never"
        android:scrollbars="vertical"
        android:scrollingCache="true" >
    </com.diyou.view.PinnedHeaderExpandableListView>

</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="8dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical"
            android:padding="8dp" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                 >

                <TextView
                    android:id="@+id/tv_item_period"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/dark_gray"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/tv_item_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignBaseline="@+id/tv_item_period"
                    android:textSize="12sp"
                    android:textColor="@color/lanse"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_size_15dp" >

                <TextView
                    android:id="@+id/tv_item_principal_textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/refund_principal"
                    android:textColor="@color/light_gray"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/tv_item_principal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_toRightOf="@+id/tv_item_principal_textView"
                    android:textColor="@color/dark_gray"
                    android:text="@string/common_display_money_default"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/tv_item_principal"
                    android:layout_alignBaseline="@+id/tv_item_principal"
                    android:text="@string/common_display_yuan_default"
                    android:textColor="@color/dark_gray"
                    android:textSize="15sp" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_size_15dp" >

                <TextView
                    android:id="@+id/tv_item_principal_yes_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/refund_principal_yes"
                    android:textColor="@color/light_gray"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/tv_item_principal_yes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_toRightOf="@+id/tv_item_principal_yes_textview"
                    android:textColor="@color/dark_gray"
                    android:text="@string/common_display_money_default"
                    android:textSize="15sp" />
                
                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/tv_item_principal_yes"
                    android:layout_alignBaseline="@+id/tv_item_principal_yes"
                    android:text="@string/common_display_yuan_default"
                    android:textColor="@color/dark_gray"
                    android:textSize="15sp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_size_15dp" >

                <TextView
                    android:id="@+id/text1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/refund_interest_yes"
                    android:textColor="@color/light_gray"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/tv_item_interest_yes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_toRightOf="@+id/text1"
                    android:textColor="@color/dark_gray"
                    android:text="@string/common_display_money_default"
                    android:textSize="15sp" />
                
                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/tv_item_interest_yes"
                    android:layout_alignBaseline="@+id/tv_item_interest_yes"
                    android:text="@string/common_display_yuan_default"
                    android:textColor="@color/dark_gray"
                    android:textSize="15sp" />
            </RelativeLayout>
            
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_size_15dp" >

                <TextView
                    android:id="@+id/tv_item_time_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/refund_refund_time"
                    android:textColor="@color/light_gray"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/tv_item_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_toRightOf="@+id/tv_item_time_textview"
                    android:textColor="@color/dark_gray"
                    android:textSize="15sp" />
            </RelativeLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="8dp"
            android:background="@color/light_gray" />

</LinearLayout>

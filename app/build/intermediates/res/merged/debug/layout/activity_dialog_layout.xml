<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/border"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="是否需要撤销？"
            android:textColor="@color/black"
            android:textSize="22dp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.4dp"
        android:background="@color/light_gray" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal" >

        <RelativeLayout
            android:id="@+id/negativeRelativeLayout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/selector_dialog_relayout_white" >

            <TextView
                android:id="@+id/negativeTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/cancel"
                android:textColor="@color/light_blue"
                android:textSize="@dimen/margin_size_20dp" />
        </RelativeLayout>

        <View
            android:layout_width="0.4dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:background="@color/light_gray" />

        <RelativeLayout
            android:id="@+id/positiveRelativeLayout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/selector_dialog_relayout_white" >

            <TextView
                android:id="@+id/positiveTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/sure"
                android:textColor="@color/light_blue"
                android:textSize="@dimen/margin_size_20dp" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout><!-- From: file:/D:/work/app/hehehh/app/src/main/res/layout/activity_dialog_layout.xml -->
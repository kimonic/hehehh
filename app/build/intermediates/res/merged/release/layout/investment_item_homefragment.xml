<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"

        android:gravity="center_vertical"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginLeft="8dip"
            android:layout_marginRight="8dip"
            android:background="@drawable/investment_fragment_item_bg"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_bid_type"
                android:layout_width="20dip"
                android:layout_height="20dip"
                android:layout_marginLeft="8dp"
                android:scaleType="fitXY"
                android:src="@drawable/investment_guarantee" />

            <TextView
                android:id="@+id/tv_bid_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:text="@string/common_display_title_default"
                android:textColor="@color/black"
                android:textSize="12sp" />

        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="75dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="8dip"
                android:layout_marginRight="8dip"
                android:background="@drawable/investment_fragment_item_bg"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:paddingTop="8dp">

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:gravity="center_vertical">

                            <TextView
                                android:id="@+id/homepage_fragment_item_interestRate"
                                style="@style/investment_layout_top_textView"
                                android:text="0" />

                            <TextView
                                style="@style/investment_layout_buttom_textView"
                                android:layout_toRightOf="@+id/homepage_fragment_item_interestRate"
                                android:text="%" />
                        </RelativeLayout>

                        <TextView
                            android:id="@+id/textView9"
                            style="@style/investment_buttom_textView"
                            android:text="@string/investment_annual_income" />
                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/tv_additional_apr"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentTop="true"
                            android:layout_marginRight="4dip"
                            android:layout_marginTop="4dip"
                            android:textSize="12sp"
                            android:textColor="@color/red"/>
                    </RelativeLayout>
                </FrameLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingTop="8dp">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center_vertical">

                        <TextView
                            android:id="@+id/homepage_fragment_item_tv_money"
                            style="@style/investment_layout_top_textView"
                            android:text="0" />

                        <TextView
                            android:id="@+id/homepage_fragment_item_tv_money_textView"
                            style="@style/investment_layout_buttom_textView"
                            android:layout_toRightOf="@+id/homepage_fragment_item_tv_money"
                            android:text="@string/common_display_yuan_default" />
                    </RelativeLayout>

                    <TextView
                        android:id="@+id/textView5"
                        style="@style/investment_buttom_textView"
                        android:text="@string/investment_borrowing_balance" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.9"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingTop="8dp">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center_vertical">

                        <TextView
                            android:id="@+id/homepage_fragment_item_tv_month"
                            style="@style/investment_layout_top_textView"
                            android:text="0" />

                        <TextView
                            android:id="@+id/homepage_fragment_item_tv_month_textView"
                            style="@style/investment_layout_buttom_textView"
                            android:layout_toRightOf="@+id/homepage_fragment_item_tv_month"
                            android:text="@string/common_month" />
                    </RelativeLayout>

                    <TextView
                        android:id="@+id/textView7"
                        style="@style/investment_buttom_textView"
                        android:text="@string/investment_loan_term" />
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="90dp"
                    android:layout_height="match_parent">

                    <com.diyou.view.RoundProgressBar
                        android:id="@+id/homepage_fragment_item_pb_progress"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:layout_margin="10dp"
                        android:layout_marginRight="5dp" />

                    <ImageView
                        android:id="@+id/investment_award"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="5dp"
                        android:src="@drawable/investment_award"
                        android:visibility="visible" />
                </RelativeLayout>
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/rl_investment_novice_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/investment_novice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="4dip"
                    android:scaleType="fitXY"
                    android:src="@drawable/investment_novice_standard1" />
            </RelativeLayout>

        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginLeft="8dip"
            android:layout_marginRight="8dip"
            android:background="@drawable/investment_fragment_item_bg"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/homepage_fragment_item_loan_kind"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:src="@drawable/investment_guarantee" />

            <TextView
                android:id="@+id/text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:text="@string/investmentfragment_guarantee"
                android:textColor="@color/black1"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/homepage_fragment_item_tv_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:text="@string/common_null"
                android:textColor="@color/black1"
                android:textSize="12sp" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/investment_amount" />

                <TextView
                    android:id="@+id/homepage_fragment_item_people_amount"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:layout_weight="1"
                    android:singleLine="true"
                    android:text="@string/investmentfragment_population"
                    android:textColor="@color/black1"
                    android:textSize="12sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout><!-- From: file:/F:/workFile/JAVA_HF_SanHeCaiFu_V5/app/src/main/res/layout/investment_item_homefragment.xml -->
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_size_10dp"
        android:background="@drawable/bankcard_bg"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="@dimen/indicator_right_padding" >

        <ImageView
            android:id="@+id/my_bank_item_img"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:scaleType="fitXY"
            android:contentDescription="@null"
            android:src="@drawable/ic_launcher" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_size_10dp"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/my_bank_item_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/mybankcardactivity_bank_card_name"
                android:textColor="@color/dimgray" />

            <TextView
                android:id="@+id/my_bank_item_account"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/mybankcardactivity_cash_bank_number"
                android:textColor="@color/dimgray" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout><!-- From: file:/F:/workFile/JAVA_HF_SanHeCaiFu_V5/app/src/main/res/layout/my_bank_item.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/layout_bg"
    android:orientation="vertical" >

    <include
        android:id="@+id/transactiondetailsactivity_titlelayout"
        layout="@layout/activity_titlelayout" />

    <include
        android:id="@+id/transactiondetailsactivity_loadlayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        layout="@layout/loading" />

    <com.diyou.pulltorefresh.PullToRefreshListView
        xmlns:ptr="http://schemas.android.com/apk/res-auto"
        android:id="@+id/transactiondetailsactivity_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:divider="@null"
        android:dividerHeight="10dp"
        android:listSelector="@drawable/listview_selector"
        android:overScrollMode="never" >
    </com.diyou.pulltorefresh.PullToRefreshListView>


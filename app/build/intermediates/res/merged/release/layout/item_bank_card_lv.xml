<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp" >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/rl_bank_card_exist"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@drawable/shape_bank_card_exist_bg"
            android:padding="15dp" >

            <TextView
                android:id="@+id/tv_bank_card_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                tools:text="银行"
                android:textColor="@color/white"
                android:textSize="15sp"  />

            <TextView
                android:id="@+id/tv_bank_card_account"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                tools:text="银行卡号"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tv_bank_card_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                tools:text="姓名"
                android:textColor="@color/white"
                android:textSize="12sp"  />

        </RelativeLayout>

        <TextView
            android:id="@+id/tv_bank_manager_tip"
            style="@style/common_gray_small_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/bank_manager_change_tip"
            android:layout_gravity="right"
            android:layout_margin="8dp"
            android:visibility="gone"/>

    </LinearLayout>

</LinearLayout>

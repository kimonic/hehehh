<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/layout_bg"
    tools:context=".CreditorRightsDetailsActivity" >

    <include
        android:id="@+id/creditorrightsdetailsActivity_titlelayout"
        layout="@layout/activity_titlelayout" />

    <include
        android:id="@+id/creditorrightsdetailsActivity_loadinglayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/investmentdetailsactivity_bottomlayout"
        android:layout_below="@+id/creditorrightsdetailsActivity_titlelayout"
        layout="@layout/loading" />

    <ScrollView
        android:id="@+id/creditorrightsdetailsActivity_scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/investmentdetailsactivity_bottomlayout"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/creditorrightsdetailsActivity_titlelayout"
        android:overScrollMode="never" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp" >

                <ImageView
                    android:id="@+id/creditorrightsdetailsActivity_product_icon"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="0.2"
                    android:contentDescription="@string/mnull"
                    android:scaleType="center"
                    android:src="@drawable/zuanshi" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.8"
                    android:gravity="center_vertical"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/creditorrightsdetailsActivity_product_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="经营店继续进货"
                        android:textSize="18sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:baselineAligned="false"
                        android:orientation="horizontal" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/creditorrightsdetailsActivity_remaining_days"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/creditorrightsdetailsActivity_still_need"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="3dp"
                            android:text="1天"
                            android:textColor="#47bda3"
                            android:textSize="12sp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0.8dp"
                android:background="#dddddd" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:baselineAligned="false"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/creditorrightsdetailsActivity_mark_total_amount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#333333"
                        android:textSize="19sp" />

                    <TextView
                        android:id="@+id/textView6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:text="@string/creditorrightsdetailsActivity_total_amount_debt"
                        android:textColor="#666666"
                        android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/creditorrightsdetailsActivity_annual_interest_rate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1000元"
                        android:textColor="#333333"
                        android:textSize="19sp" />

                    <TextView
                        android:id="@+id/textView9"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:text="@string/creditorrightsdetailsActivity_transfer_price"
                        android:textColor="#666666"
                        android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/creditorrightsdetailsActivity_reimbursement_deadline"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="12%"
                        android:textColor="#333333"
                        android:textSize="19sp" />

                    <TextView
                        android:id="@+id/textView11"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:text="@string/creditorrightsdetailsActivity_annual_interest_rate"
                        android:textColor="#666666"
                        android:textSize="12sp" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0.8dp"
                android:layout_marginTop="10dp"
                android:background="#dddddd" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:baselineAligned="false"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/textView20"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="@string/creditorrightsdetailsActivity_last_reimbursement_deadline" />

                    <TextView
                        android:id="@+id/creditorrightsdetailsActivity_month_also_principal_and_interest"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="3dp"
                        android:text="2014-11-12"
                        android:textColor="#47bda3" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/textView22"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/creditorrightsdetailsActivity_collecting_interest" />

                    <TextView
                        android:id="@+id/creditorrightsdetailsActivity_safeguard_way"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="3dp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:background="#e0dfe0"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:paddingRight="10dp" >

                <CheckedTextView
                    android:id="@+id/creditorrightsdetailsActivity_details"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:background="@drawable/investment_details_tab_left_bg"
                    android:checked="true"
                    android:gravity="center"
                    android:text="@string/creditorrightsdetailsActivity_title"
                    android:textColor="@drawable/investment_details_fontcolor" />

                <CheckedTextView
                    android:id="@+id/creditorrightsdetailsActivity_transfer_record"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:background="@drawable/investment_details_tab_right_bg"
                    android:gravity="center"
                    android:text="@string/creditorrightsdetailsActivity_transfer_record"
                    android:textColor="@drawable/investment_details_fontcolor" />
            </LinearLayout>

            <FrameLayout
                android:id="@+id/creditorrightsdetailsActivity_framelayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >
            </FrameLayout>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/investmentdetailsactivity_bottomlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/creditorrightsdetailsActivity_loginprompt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fffdd2"
            android:gravity="center" >

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:contentDescription="@string/mnull"
                android:src="@drawable/actionbar_search_icon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:text="@string/investmentdetailsactivity_investmentAfterLogin"
                android:textColor="@color/gray" />
        </LinearLayout>

        <Button
            android:id="@+id/creditorrightsdetailsActivity_btn_investment"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/button_bg"
            android:text="@string/investmentdetailsactivity_immediate_investment"
            android:textColor="@color/white"
            android:textSize="18sp" />
    </LinearLayout>

</RelativeLayout><!-- From: file:/F:/workFile/JAVA_HF_SanHeCaiFu_V5/app/src/main/res/layout/activity_creditor_rights_details.xml -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background" >

    <RelativeLayout
        android:id="@+id/authentication_title_layout"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/blue" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="@string/escrowregistered_huifu_authentication"
            android:textColor="@android:color/white"
            android:textSize="19sp" />

        <TextView
            android:id="@+id/authentication_back"
            android:layout_width="@dimen/margin_size_90dp"
            android:layout_height="48dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:drawableLeft="@drawable/back"
            android:drawablePadding="3dp"
            android:gravity="center"
            android:text="@string/escrowregistered_huifu_back"
            android:textColor="@color/white"
            android:textSize="18sp" />
    </RelativeLayout>

    <WebView
        android:id="@+id/authentication_wv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/authentication_title_layout"
        android:scrollbars="vertical" />

    <ProgressBar
        android:id="@+id/authentication_pb"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_alignParentLeft="true"
        android:layout_alignTop="@+id/authentication_wv"
        android:progressDrawable="@drawable/web_barbgimg" />

</RelativeLayout><!-- From: file:/F:/workFile/JAVA_HF_SanHeCaiFu_V5/app/src/main/res/layout/activity_huifu_authentication.xml -->
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EFEFF4"
    android:orientation="vertical" >

    <include
        android:id="@+id/titlebar"
        layout="@layout/investmentdetailsactivity_titlelayout" />


    <com.diyou.view.PagerSlidingTabStrip
        android:id="@+id/project_indicator"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="#ffffff"
        app:dividerColor="@android:color/transparent"
        app:indicatorColor="@color/qianlanse"
        app:indicatorHeight="@dimen/margin_size_2dp"
        app:pagedividerPadding="10dp"
        app:shouldExpand="true" >
    </com.diyou.view.PagerSlidingTabStrip>

    <android.support.v4.view.ViewPager
        android:id="@+id/project_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
    </android.support.v4.view.ViewPager>

</LinearLayout><!-- From: file:/F:/workFile/JAVA_HF_SanHeCaiFu_V5/app/src/main/res/layout/activity_my_project.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/layout_bg"
    android:orientation="vertical" >

    <include
        android:id="@+id/activity_update_login_password_title_layout"
        layout="@layout/activity_update_login_password_titlelayout" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_size_0.1dp"
        android:background="@color/gray" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="10.0dp"
        android:layout_margin="10.0dp"
        android:text="@string/activity_update_newlogin_password_waring" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <EditText
            android:id="@+id/activity_update_newlogin_password_new_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_size_20dp"
            android:layout_weight="1"
            android:background="@null"
            android:ems="10"
            android:hint="@string/activity_update_newlogin_password_new_password"
            android:inputType="textPassword"
            android:textColor="@color/dimgray"
            android:textSize="@dimen/font_size_18sp" />
        
        <RelativeLayout
            android:id="@+id/show_new_password_RelativeLayout "
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_marginRight="15dp" >

            <ImageView
                android:id="@+id/show_new_password"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:background="@drawable/selector_imageview_payment"
                android:padding="10dp"
                android:scaleType="fitXY" />
        </RelativeLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_size_0.1dp"
        android:background="@color/gray" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <EditText
            android:id="@+id/activity_update_newlogin_password_check_new_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_size_20dp"
            android:layout_weight="1"
            android:background="@null"
            android:ems="10"
            android:hint="@string/activity_update_newlogin_password_check_new_password"
            android:inputType="textPassword"
            android:textColor="@color/dimgray"
            android:textSize="@dimen/font_size_18sp" />
        
        <RelativeLayout
            android:id="@+id/show_login_password_again_RelativeLayout "
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_marginRight="15dp" >

            <ImageView
                android:id="@+id/show_login_password_again"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:background="@drawable/selector_imageview_payment"
                android:padding="10dp" />
        </RelativeLayout>

    </LinearLayout>

    <Button
        android:id="@+id/updataemailcctivity_next_btn"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="8dp"
        android:background="@drawable/button_bg"
        android:text="@string/activity_update_newlogin_password_check_update"
        android:textColor="@drawable/button_textcolor"
        android:textSize="16sp" />

</LinearLayout><!-- From: file:/F:/workFile/JAVA_HF_SanHeCaiFu_V5/app/src/main/res/layout/activity_reset_login_password.xml -->
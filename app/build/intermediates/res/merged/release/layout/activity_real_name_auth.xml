<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".RealNameAuthActivity"
    android:background="@color/layout_bg" >

    <include
        android:id="@+id/activity_update_phone_number_title_layout"
        layout="@layout/layout_common_title_bar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/investment_fragment_item_bg"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal"
        android:padding="1dp" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_gravity="center_vertical"
            android:text="@string/real_name_id_name"
            android:textSize="15sp"
            android:textColor="@color/huise"
            android:visibility="gone" />

        <EditText
            android:id="@+id/et_real_name"
            style="@style/editText"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:background="@color/white"
            android:layout_gravity="center_vertical"
            android:hint="@string/real_name_input_name"
            android:padding="8dp" >

            <requestFocus />
        </EditText>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/investment_fragment_item_bg"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal"
        android:padding="1dp" >

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_gravity="center_vertical"
            android:text="@string/real_name_id_num"
            android:textSize="15sp"
            android:textColor="@color/huise"
            android:visibility="gone" />

        <EditText
            android:id="@+id/et_real_name_id"
            style="@style/editText"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:digits="0123456789Xx"
            android:ems="10"
            android:maxLength="18"
            android:background="@color/white"
            android:layout_gravity="center_vertical"
            android:hint="@string/real_name_input_num"
            android:padding="8dp" >

            <requestFocus />
        </EditText>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@drawable/investment_fragment_item_bg" >

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" >

            <ImageView
                android:id="@+id/iv_real_name_photo_zheng"
                android:layout_width="100dp"
                android:layout_height="70dp"
                android:layout_centerInParent="true"
                android:src="@drawable/take_photo"
                android:layout_marginTop="8dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_centerHorizontal="true"
                android:layout_above="@+id/iv_real_name_photo_zheng" >

                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/realname_id_card_zheng" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/real_name_photo_zheng"
                    android:textColor="@color/huise"
                    android:textSize="15sp" />

            </LinearLayout>

        </RelativeLayout>

        <TextView
            android:id="@+id/textView3"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:background="@color/gray" />

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" >
            <ImageView
                android:id="@+id/iv_real_name_photo_fang"
                android:layout_width="100dp"
                android:layout_height="70dp"
                android:layout_centerInParent="true"
                android:src="@drawable/take_photo"
                android:layout_marginTop="8dp"  />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_centerHorizontal="true"
                android:layout_above="@+id/iv_real_name_photo_fang" >

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/realname_id_card_fang" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/real_name_photo_fan"
                    android:textColor="@color/huise"
                    android:textSize="15sp" />

            </LinearLayout>
        </RelativeLayout>

    </LinearLayout>

    <Button
        android:id="@+id/btn_phone_bind_number_next"
        style="@style/button"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/button_bg"
        android:text="@string/real_name_start_auth"
        android:textColor="@drawable/button_textcolor"
        android:textSize="16sp" />
</LinearLayout>

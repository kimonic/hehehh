<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="mystyle" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@drawable/bg</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="investment_layout_top_textView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:textColor">@color/black1</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="investment_layout_buttom_textView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:textColor">@color/black1</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="investment_buttom_textView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center_vertical|top</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">#767676</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="button">
        <item name="android:textColor">@drawable/button_textcolor</item>
        <item name="android:background">@drawable/button_bg</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/button_font_size</item>
    </style>

    <style name="editText">
        <item name="android:textColorHint">@color/huise</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:background">@null</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">@dimen/editText_font_size</item>
    </style>

    <style name="MyDialog" parent="@android:Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="dialogWindowAnim" mce_bogus="1" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/push_left_in</item>
        <item name="android:windowExitAnimation">@anim/push_left_out</item>
    </style>

    <style name="common_black_mid_textView">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="common_gray_small_textView">
        <item name="android:textColor">@color/huise</item>
        <item name="android:textSize">14sp</item>
        <item name="android:singleLine">true</item>
    </style>
    <style name="common_dark_gray_small_textView">
        <item name="android:textColor">@color/shenhuise</item>
        <item name="android:textSize">14sp</item>
        <item name="android:singleLine">true</item>
    </style>
    <style name="common_black_small_textView">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">14sp</item>
        <item name="android:singleLine">true</item>
    </style>
    <style name="common_orange_small_textView">
        <item name="android:textColor">@color/chengse</item>
        <item name="android:textSize">14sp</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="ButtonRed" parent="@android:style/Widget.Button">
        <item name="android:textSize">18.0sp</item>
        <item name="android:textColor">@drawable/skin_color_button</item>
        <item name="android:background">@drawable/common_btn_red</item>
    </style>

    <style name="ButtonGreen" parent="@android:style/Widget.Button">
        <item name="android:textSize">18.0sp</item>
        <item name="android:textColor">@drawable/skin_color_button</item>
        <item name="android:background">@drawable/common_btn_green</item>
    </style>

    <style name="ButtonBack">
        <item name="android:width">50.0dp</item>
        <item name="android:height">50.0dp</item>
        <item name="android:background">@drawable/home_button_bg</item>
        <item name="android:src">@drawable/back</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">10.0dp</item>
        <item name="android:scaleType">centerInside</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18.0sp</item>
    </style>

  

</resources>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/huifupay_rl"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".HuiFuPayActivity" >

    <include
        android:id="@+id/huifupay_titlelayout"
        layout="@layout/activity_titlelayout" />

    <ProgressBar
        android:id="@+id/huifupay_pb"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:progressDrawable="@drawable/web_barbgimg" />

    <WebView
        android:id="@+id/huifupay_wv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical" />

</LinearLayout>
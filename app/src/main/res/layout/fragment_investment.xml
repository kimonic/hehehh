<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/layout_bg"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/dark_bule" >

        <ImageView
            android:id="@+id/investment_show_calculator"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/selector_btn_blue"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:src="@drawable/investment_datails_operation" />

        <TextView
            android:id="@+id/investmentfragment_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="@string/investmentfragment_title"
            android:textColor="@color/white"
            android:textSize="@dimen/textsize" />
    </RelativeLayout>

    <com.diyou.view.PagerSlidingTabStrip
        android:id="@+id/investmentfragment_indicator"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        app:dividerColor="@android:color/transparent"
        app:indicatorColor="@color/layout_title_bg"
        app:indicatorHeight="@dimen/margin_size_2dp"
        app:pagedividerPadding="10dp"
        app:shouldExpand="true" >
    </com.diyou.view.PagerSlidingTabStrip>

    <android.support.v4.view.ViewPager
        android:id="@+id/investmentfragment_viewPage"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
    </android.support.v4.view.ViewPager>

</LinearLayout>
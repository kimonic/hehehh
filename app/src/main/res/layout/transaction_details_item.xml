<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_size_10dp" >

        <TextView
            android:id="@+id/transaction_details_item_type"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="@dimen/margin_size_10dp"
            android:text="TextView"
            android:textSize="@dimen/font_size_17sp" />

        <TextView
            android:id="@+id/transaction_details_item_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="@dimen/margin_size_10dp"
            android:text="TextView"
            android:textSize="@dimen/font_size_17sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_size_10dp"
        android:layout_marginLeft="@dimen/margin_size_10dp"
        android:layout_marginRight="@dimen/margin_size_10dp" >

        <TextView
            android:id="@+id/transaction_details_item_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="@dimen/margin_size_10dp"
            android:text="TextView"
            android:textColor="@color/dimgray"
            android:textSize="@dimen/font_size_17sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="@dimen/margin_size_10dp"
            android:text="@string/activity_transaction_details_state"
            android:textColor="@color/dimgray"
            android:textSize="@dimen/font_size_17sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_size_0.1dp"
        android:background="@color/gray" />

</LinearLayout>